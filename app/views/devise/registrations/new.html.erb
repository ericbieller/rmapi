<div id="signup">
  <h2>Sign up for API access</h2>
  <p>
    Sign up for free and start using our API to retrieve Royal Mail&#8482; shipping rates within minutes using our Sandbox environment.
  </p>
  
  <%= form_for(resource, :as => resource_name, :html => { :class => 'well middleform' }, :url => registration_path(resource_name)) do |f| %>
    <div>
      <%= f.label :email %>
      <span class="form-error"><%= resource.errors[:email].join(", ") %></span>
      <%= f.email_field :email, :autofocus => true %>
    </div>
  
    <div>
      <%= f.label :password %>
      <span class="form-error"><%= resource.errors[:password].join(", ") %></span>
      <%= f.password_field :password %>
    </div>
  
    <div><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %></div>
  
    <div><%= f.submit "Sign up", :class => 'btn btn-success' %></div>
    
    <div class="signup_links">
      <%= render "devise/shared/links" %>
    </div>
    
    <div class="clearfix"></div>
  <% end %>
</div>